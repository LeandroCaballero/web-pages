generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  name      String
  password  String
}

model Movie {
  id          String     @id @default(cuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  name        String
  location    String
  genre       String
  director    String
  actors      String[]
  description String
  image       String
  videoImage  String?
  videoUrl    String?
  duration    String
  schedules   Schedule[]

  cinemas Cinema[]
}

model Schedule {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  type      String
  hours     DateTime

  movie   Movie?  @relation(fields: [movieId], references: [id])
  movieId String?
}

model Cinema {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  location  String

  movies Movie[]
  cities Cities[]
}

model Cities {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  cinemas   Cinema[]
}
